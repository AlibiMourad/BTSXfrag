<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            Padding="10,10,10,0"
             Title="B.T.S @ XFRAG "
             x:Class="BTSxfrag.PraincipalPage">
  <StackLayout Orientation="Vertical"
               >
     <Label Text="Choisi Votre Tache :"
           Font="Bold"
           TextColor="Red"
           FontSize="30"/>
    <Button FontSize="16"
             BackgroundColor="#0BACFF"
            TextColor="White"
              Margin="3"
            Text="MAP and GPS "
            Clicked="ButtonMap"/>
   <Button Text="Assembli"
            BorderColor="Black"
            TextColor="White"
            BackgroundColor="Blue"
            Clicked="ButtonAssmbli" />
    
    <Button Text="Outils"
            BorderColor="Black"
            TextColor="White"
            BackgroundColor="Blue"
            Clicked="ClicTools"/>

    
    <Button Text="configuration (memori SD)"
            BorderColor="Black"
            TextColor="White"
            BackgroundColor="Blue"
            Clicked="ClicedIfconfig"/>
    
  <Grid VerticalOptions="End" Padding="0,36,0,0">
    <Image Source="xamarin.png"
           HorizontalOptions="Center"
           VerticalOptions="End"></Image>
  </Grid>
  </StackLayout>
</ContentPage>